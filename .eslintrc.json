{
	"env": {
		"browser": true,
		"es6": true
	},
	"parser": "babel-eslint",
  "extends": [
    "airbnb", "prettier", "prettier/react"
  ],
  "globals": {
    "React": "writable"
	},
	"parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": [0, { "forbid": ["any"] }],
    "react/prop-types": 0
  }
}
